<launch>

  <param name="use_sim_time" value="false" />
  
  <!-- EDIT THIS LINE TO REFLECT THE NAME OF YOUR OWN MAP FILE 
       Can also be overridden on the command line -->
  <arg name="map" default="ferly01.yaml" />

  <!-- Run the map server with the desired map -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find nav)/maps/$(arg map)" output="screen"/>

  <!-- Start move_base  -->
  <include file="$(find nav)/launch/includes/move_base_dwa.launch.xml" >
  </include>
  
  <!-- Fire up AMCL -->
  <include file="$(find nav)/launch/includes/amcl.launch.xml" />
  
</launch>
